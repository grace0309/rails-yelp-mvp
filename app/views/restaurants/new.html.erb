<h1>Add a Restaurant</h1>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, lable: false, placeholder: "Name of Restaurant" %>
    <%= f.input :address, lable: false, placeholder: "Address" %>
    <%= f.input :phone_number, lable: false, placeholder: "Phone Number" %>
    <%= f.input :category, lable: false, placeholder: "Type of Cuisine" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  class: "btn btn-primary" %>
  </div>
<% end %>
